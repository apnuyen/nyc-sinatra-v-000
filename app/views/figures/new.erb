<h1>New Figure</h1>
<form action="/figures" method="post">
  <p>Name: <input type="text" id="figure_name" name="figure[name]"></p>
  <ul>
    <li>Choose an existing landmark:</li>
    <% Landmark.all.each do |landmark| %>
    <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>">
    <%=landmark.name%>
    <%end%>
    <li>Choose an existing title:</li>
    <%Title.all.each do |title| %>
    <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>">
    <%=title.name%>
    <%end%>
    <li>Create a new landmark (optional):</li>
    Name: <input type="text" id="new_landmark" name="landmark[name]">
    Year Completed: <input type="text" id="landmark_year_completed" name="landmark[year_completed]">
    <li>Create a new title (optional):</li>
    Name: <input type="text" id="new_title" name="title[name]">

  </ul>
  <input type="submit" value="Create New Figure">
</form>
